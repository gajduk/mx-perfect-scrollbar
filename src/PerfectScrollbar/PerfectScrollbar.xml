<?xml version="1.0" encoding="utf-8" ?>
<widget id="PerfectScrollbar.widget.PerfectScrollbar" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>PerfectScrollbar</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="targetClass" type="string" required="false" defaultValue="">
            <caption>target class</caption>
            <category>Appearance</category>
            <description>Class of a target html element that should be scrollable.</description>
        </property>
        <property key="scrollToAttribute" type="attribute" required="false" defaultValue="" allowNonPersistableEntities="true" >
            <caption>Scroll To Attribute</caption>
            <category>Appearance</category>
            <description>An integer attribute that initilizes the scrolling to a specific offset.</description>
            <attributeTypes>
                <attributeType name="Integer"/>
            </attributeTypes>
        </property>
    </properties>
</widget>
